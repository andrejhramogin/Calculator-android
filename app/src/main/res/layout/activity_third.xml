<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_green"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/dark_green_gray"
        android:padding="10dp"
        android:text="@string/calculator_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/number_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/gray"
        android:text="@string/number_1"
        android:textColor="@color/dark_gray"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="135dp"
        android:backgroundTint="@color/gray"
        android:text="@string/number_2"
        android:textColor="@color/dark_gray"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="@+id/number_1"
        app:layout_constraintStart_toStartOf="@+id/number_1"
        app:layout_constraintTop_toTopOf="@+id/number_1" />


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="285dp"
        android:backgroundTint="@color/gray"
        android:text="@string/number_3"
        android:textColor="@color/dark_gray"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



